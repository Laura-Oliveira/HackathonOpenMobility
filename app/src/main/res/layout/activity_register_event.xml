<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterEventActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/registered_shop"
        android:text="CADASTRAR EVENTO"
        android:textSize="10pt"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/check_comida10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione o tipo de evento"
        android:textColor="@color/colorPrimary"
        android:textSize="10pt"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <CheckBox
            android:id="@+id/check_box_comida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/check_comida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_comida"
            android:textColor="@color/colorPrimary"
            android:textSize="10pt"
            android:textStyle="bold"
            android:layout_marginBottom="8pt"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_box_comida1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/check_comida1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_comida1"
            android:textColor="@color/colorPrimary"
            android:textSize="10pt"
            android:textStyle="bold"
            android:layout_marginBottom="8pt"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_box_comida2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/check_comida2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_comida2"
            android:textColor="@color/colorPrimary"
            android:textSize="10pt"
            android:textStyle="bold"
            android:layout_marginBottom="8pt"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/shop_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição do evento"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/cor_texto"
        android:textColorHint="@color/cor_texto"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:background="@color/button"
            android:onClick="nextPageButton"
            android:text="Próximo"
            android:textColor="@color/cor_texto_button"
            android:textSize="10pt"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>